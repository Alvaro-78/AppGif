{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "bracketLine": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "overrides": [
        {
            "files": ["*.html"],
            "options": {
                "tabWidth": 4,
                "printWidth": 80,
                "singleQuote": false,
                "parser": "html"
            }
        },
        {
            "files": ["*.md"],
            "options": {
                "tabWidth": 4,
                "printWidth": 80000,
                "singleQuote": true,
                "parser": "markdown"
            }
        }
    ],
    "[yaml]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
